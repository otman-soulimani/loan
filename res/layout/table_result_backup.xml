<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CouleurFond"
    android:weightSum="100"
    android:orientation="vertical" >

<TableLayout
    android:id="@+id/table_layout"
    android:stretchColumns="0"
    android:shrinkColumns="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<TableRow android:id="@+id/tableRow1" android:layout_width="match_parent" android:layout_height="wrap_content">

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.3"
	    android:background="@drawable/cell_header"
	    android:gravity="center_horizontal"
	    android:text="Récapitulatif"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#000"
	    android:textStyle="bold" >
	</TextView>

</TableRow>

<TableRow android:id="@+id/tableRow1" android:layout_width="match_parent" android:layout_height="wrap_content">

	<TextView
	        android:id="@+id/textView1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="15"
	        android:background="@drawable/cell_row"
	        android:text="Année"
	        android:textAppearance="?android:attr/textAppearanceSmall" >
	</TextView>
	    
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="30"
	    android:background="@drawable/cell_row"
	    android:text="Capital Amorti"
	    android:textAppearance="?android:attr/textAppearanceSmall" >
	</TextView>
	
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="25"
	    android:background="@drawable/cell_row"
	    android:text="Interets"
	    android:textAppearance="?android:attr/textAppearanceSmall" >

	</TextView>
		<TextView
	    android:id="@+id/TextView01"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="30"
	    android:background="@drawable/cell_row"
	    android:text="Reste"
	    android:textAppearance="?android:attr/textAppearanceSmall" >
	</TextView>

</TableRow>

</TableLayout>

</LinearLayout>